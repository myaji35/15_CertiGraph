# Clerk (for JWT verification)
CLERK_JWKS_URL=https://your-clerk-domain.clerk.accounts.dev/.well-known/jwks.json

# ===== DATABASE CONFIGURATION =====
# Option 1: GCP Cloud SQL (Recommended for production)
USE_CLOUD_SQL=true
CLOUD_SQL_HOST=localhost  # Use localhost when using Cloud SQL Proxy
CLOUD_SQL_PORT=5432
CLOUD_SQL_DATABASE=certigraph
CLOUD_SQL_USER=certigraph_user
CLOUD_SQL_PASSWORD=your-cloud-sql-password
CLOUD_SQL_CONNECTION_NAME=project-id:region:instance-name

# Option 2: Supabase (Legacy - for backwards compatibility)
# USE_CLOUD_SQL=false
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key

# Anthropic Claude (for question extraction)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# OpenAI (for embeddings)
OPENAI_API_KEY=sk-your-openai-api-key

# Upstage
UPSTAGE_API_KEY=your-upstage-api-key

# ===== VECTOR SEARCH CONFIGURATION =====
# Option 1: GCP Vertex AI Vector Search (Recommended)
USE_VERTEX_AI=true
GCP_PROJECT_ID=postgresql-479201
GCP_REGION=asia-northeast3
VERTEX_AI_INDEX_ID=your-index-id
VERTEX_AI_INDEX_ENDPOINT_ID=your-endpoint-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Option 2: Pinecone (Legacy)
# USE_VERTEX_AI=false
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=certigraph-questions

# Neo4j (unchanged)
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Plane (Project Management Integration)
PLANE_API_URL=http://localhost:8000/api/v1
PLANE_API_KEY=your-plane-api-key
PLANE_WORKSPACE=your-workspace-slug
PLANE_PROJECT_ID=your-project-id

# Inngest (Background Jobs)
INNGEST_EVENT_KEY=  # Optional: for production use

# Server
CORS_ORIGINS=http://localhost:3000
