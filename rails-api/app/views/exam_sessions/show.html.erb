<div class="min-h-screen bg-gray-100 flex flex-col">
  <!-- Top Navigation Bar -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <!-- Timer and Progress -->
        <div class="flex items-center space-x-6">
          <!-- Timer -->
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="font-mono text-lg font-semibold text-gray-700" id="timer">
              <%= @exam_session.formatted_time_elapsed %>
            </span>
          </div>

          <!-- Progress Bar -->
          <div class="flex items-center space-x-2">
            <span class="text-sm text-gray-500">진행률</span>
            <div class="w-32 bg-gray-200 rounded-full h-2.5">
              <div class="bg-blue-600 h-2.5 rounded-full transition-all duration-300" style="width: <%= @progress_percentage %>%"></div>
            </div>
            <span class="text-sm font-medium text-gray-700">
              <%= @answered_count %> / <%= @total_questions %>
            </span>
          </div>
        </div>

        <!-- Control Buttons -->
        <div class="flex items-center space-x-3">
          <button class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </button>
          <%= link_to abandon_exam_session_path(@exam_session), method: :post, data: { confirm: '정말 시험을 중단하시겠습니까?' }, class: "px-4 py-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors" do %>
            종료
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="flex-1 flex">
    <!-- Left Sidebar - Question Navigation -->
    <div class="w-64 bg-white border-r border-gray-200 overflow-y-auto">
      <div class="p-4">
        <h3 class="text-sm font-semibold text-gray-700 uppercase tracking-wider mb-4">문제 목록</h3>
        <div class="grid grid-cols-5 gap-2">
          <% @exam_answers.each_with_index do |answer, index| %>
            <%
              button_class = if index == @current_question_index
                "bg-blue-600 text-white"
              elsif answer.selected_answer.present?
                "bg-green-100 text-green-800 border-green-300"
              else
                "bg-white text-gray-600 border-gray-300"
              end
            %>
            <%= link_to (index + 1).to_s,
                        exam_session_path(@exam_session, question: index),
                        class: "#{button_class} w-10 h-10 flex items-center justify-center border-2 rounded-lg font-semibold text-sm hover:scale-105 transition-transform" %>
          <% end %>
        </div>
      </div>

      <!-- Legend -->
      <div class="p-4 border-t border-gray-200">
        <div class="space-y-2 text-xs">
          <div class="flex items-center space-x-2">
            <div class="w-4 h-4 bg-blue-600 rounded"></div>
            <span class="text-gray-600">현재 문제</span>
          </div>
          <div class="flex items-center space-x-2">
            <div class="w-4 h-4 bg-green-100 border border-green-300 rounded"></div>
            <span class="text-gray-600">답변 완료</span>
          </div>
          <div class="flex items-center space-x-2">
            <div class="w-4 h-4 bg-white border border-gray-300 rounded"></div>
            <span class="text-gray-600">미답변</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Question Area -->
    <div class="flex-1 flex flex-col">
      <% if @current_question %>
        <%= form_with url: submit_answer_exam_session_path(@exam_session),
                      method: :post,
                      local: true,
                      class: "flex-1 flex flex-col" do |form| %>
          <%= form.hidden_field :answer_id, value: @current_answer.id %>
          <%= form.hidden_field :next_question, value: @current_question_index + 1 %>

          <!-- Question Content -->
          <div class="flex-1 overflow-y-auto p-8">
            <div class="max-w-4xl mx-auto">
              <!-- Question Number and Text -->
              <div class="mb-8">
                <div class="flex items-center mb-4">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                    문제 <%= @current_question_index + 1 %>
                  </span>
                </div>
                <div class="prose prose-lg max-w-none">
                  <p class="text-gray-900 leading-relaxed whitespace-pre-wrap"><%= @current_question.question_text %></p>
                </div>
              </div>

              <!-- Answer Options -->
              <div class="space-y-3">
                <% options = @current_question.options || {} %>
                <% ['①', '②', '③', '④', '⑤'].each do |num| %>
                  <% if options[num].present? %>
                    <label class="flex items-start p-4 bg-white border-2 border-gray-200 rounded-lg hover:border-blue-400 hover:bg-blue-50 transition-all cursor-pointer group">
                      <%= form.radio_button :selected_answer,
                                           num,
                                           checked: (@current_answer.selected_answer == num),
                                           class: "mt-1 mr-3 text-blue-600",
                                           onchange: "this.form.requestSubmit()" %>
                      <div class="flex-1">
                        <span class="font-medium text-gray-900 group-hover:text-blue-700"><%= num %></span>
                        <span class="ml-2 text-gray-700"><%= options[num] %></span>
                      </div>
                    </label>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Bottom Navigation -->
          <div class="bg-white border-t border-gray-200 px-8 py-4">
            <div class="max-w-4xl mx-auto flex items-center justify-between">
              <!-- Previous Button -->
              <% if @current_question_index > 0 %>
                <%= link_to exam_session_path(@exam_session, question: @current_question_index - 1),
                            class: "flex items-center px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors" do %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                  이전 문제
                <% end %>
              <% else %>
                <div></div>
              <% end %>

              <!-- Bookmark Button -->
              <button type="button" class="px-4 py-2 text-amber-600 hover:bg-amber-50 rounded-lg transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                </svg>
              </button>

              <!-- Next/Submit Button -->
              <% if @current_question_index < @total_questions - 1 %>
                <%= link_to exam_session_path(@exam_session, question: @current_question_index + 1),
                            class: "flex items-center px-4 py-2 text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors" do %>
                  다음 문제
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              <% else %>
                <%= link_to "제출하기",
                            complete_exam_session_path(@exam_session),
                            method: :post,
                            data: { confirm: '시험을 제출하시겠습니까?' },
                            class: "px-6 py-2 text-white bg-green-600 hover:bg-green-700 font-semibold rounded-lg transition-colors" %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="flex-1 flex items-center justify-center">
          <div class="text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 class="mt-2 text-lg font-medium text-gray-900">문제가 없습니다</h3>
            <p class="mt-1 text-sm text-gray-500">이 시험에는 표시할 문제가 없습니다.</p>
            <%= link_to "돌아가기", @exam_session.study_set, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- JavaScript for Timer -->
<script>
  // Update timer every second
  let startTime = new Date("<%= @exam_session.started_at.iso8601 %>");

  function updateTimer() {
    let now = new Date();
    let elapsed = Math.floor((now - startTime) / 1000);

    let hours = Math.floor(elapsed / 3600);
    let minutes = Math.floor((elapsed % 3600) / 60);
    let seconds = elapsed % 60;

    let timeString = "";
    if (hours > 0) {
      timeString = `${hours}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
    } else {
      timeString = `${minutes}:${seconds.toString().padStart(2, '0')}`;
    }

    document.getElementById('timer').textContent = timeString;
  }

  setInterval(updateTimer, 1000);
</script>