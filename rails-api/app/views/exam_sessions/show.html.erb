<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50 flex flex-col">
  <!-- Top Navigation Bar -->
  <div class="bg-white shadow-lg border-b-2 border-primary-blue sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-20">
        <!-- Timer and Progress -->
        <div class="flex items-center space-x-8">
          <!-- Timer -->
          <div class="flex items-center space-x-3 bg-blue-50 px-4 py-2 rounded-lg">
            <svg class="w-6 h-6 text-primary-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="font-mono text-xl font-bold text-gray-900 exam-timer" id="timer">
              <%= @exam_session.formatted_time_elapsed %>
            </span>
          </div>

          <!-- Progress Bar -->
          <div class="flex items-center space-x-3">
            <span class="text-sm font-semibold text-gray-700">진행률</span>
            <div class="w-40 bg-gray-200 rounded-full h-3 shadow-inner">
              <div class="bg-gradient-to-r from-primary-blue to-accent-purple h-3 rounded-full transition-all duration-500" style="width: <%= @progress_percentage %>%"></div>
            </div>
            <span class="text-base font-bold text-gray-900 min-w-[60px]">
              <%= @answered_count %> / <%= @total_questions %>
            </span>
          </div>
        </div>

        <!-- Control Buttons -->
        <div class="flex items-center space-x-4">
          <%= link_to abandon_exam_session_path(@exam_session), method: :post, data: { confirm: '정말 시험을 중단하시겠습니까?' }, class: "btn btn-secondary" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            종료
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="flex-1 flex">
    <!-- Left Sidebar - Question Navigation -->
    <div class="w-72 bg-white border-r-2 border-gray-200 overflow-y-auto shadow-lg">
      <div class="p-6">
        <h3 class="text-base font-bold text-gray-900 mb-6 flex items-center">
          <svg class="w-5 h-5 mr-2 text-primary-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          문제 목록
        </h3>
        <div class="grid grid-cols-5 gap-2.5">
          <% @exam_answers.each_with_index do |answer, index| %>
            <%
              button_class = if index == @current_question_index
                "bg-gradient-to-br from-primary-blue to-accent-purple text-white shadow-lg"
              elsif answer.selected_answer.present?
                "bg-green-100 text-green-800 border-2 border-green-400"
              else
                "bg-white text-gray-600 border-2 border-gray-300 hover:border-primary-blue"
              end
            %>
            <%= link_to (index + 1).to_s,
                        exam_session_path(@exam_session, question: index),
                        class: "#{button_class} w-11 h-11 flex items-center justify-center rounded-xl font-bold text-sm hover:scale-110 transition-all duration-200" %>
          <% end %>
        </div>
      </div>

      <!-- Legend -->
      <div class="p-6 border-t-2 border-gray-200 bg-gray-50">
        <h4 class="text-xs font-bold text-gray-700 uppercase tracking-wider mb-3">범례</h4>
        <div class="space-y-3 text-sm">
          <div class="flex items-center space-x-3">
            <div class="w-5 h-5 bg-gradient-to-br from-primary-blue to-accent-purple rounded-lg shadow"></div>
            <span class="text-gray-700 font-medium">현재 문제</span>
          </div>
          <div class="flex items-center space-x-3">
            <div class="w-5 h-5 bg-green-100 border-2 border-green-400 rounded-lg"></div>
            <span class="text-gray-700 font-medium">답변 완료</span>
          </div>
          <div class="flex items-center space-x-3">
            <div class="w-5 h-5 bg-white border-2 border-gray-300 rounded-lg"></div>
            <span class="text-gray-700 font-medium">미답변</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Question Area -->
    <div class="flex-1 flex flex-col">
      <% if @current_question %>
        <%= form_with url: submit_answer_exam_session_path(@exam_session),
                      method: :post,
                      local: true,
                      class: "flex-1 flex flex-col" do |form| %>
          <%= form.hidden_field :answer_id, value: @current_answer.id %>
          <%= form.hidden_field :next_question, value: @current_question_index + 1 %>

          <!-- Question Content -->
          <div class="flex-1 overflow-y-auto p-10">
            <div class="max-w-4xl mx-auto">
              <!-- Question Number and Text -->
              <div class="mb-10">
                <div class="flex items-center mb-6">
                  <span class="badge badge-primary text-base px-4 py-2">
                    문제 <%= @current_question_index + 1 %>
                  </span>
                </div>
                <div class="card bg-gradient-to-br from-white to-blue-50 p-8">
                  <p class="text-gray-900 text-lg leading-relaxed whitespace-pre-wrap"><%= @current_question.question_text %></p>
                </div>
              </div>

              <!-- Answer Options -->
              <div class="space-y-4">
                <% options = @current_question.options || {} %>
                <% ['①', '②', '③', '④', '⑤'].each_with_index do |num, idx| %>
                  <% if options[num].present? %>
                    <label class="answer-option flex items-start p-5 bg-white border-2 border-gray-200 rounded-xl hover:border-primary-blue hover:bg-blue-50 hover:shadow-md transition-all cursor-pointer group <%= 'selected' if @current_answer.selected_answer == num %>">
                      <%= form.radio_button :selected_answer,
                                           num,
                                           checked: (@current_answer.selected_answer == num),
                                           class: "mt-1.5 mr-4 text-primary-blue w-5 h-5",
                                           onchange: "this.form.requestSubmit()" %>
                      <div class="flex-1">
                        <span class="font-bold text-gray-900 group-hover:text-primary-blue text-lg"><%= num %></span>
                        <span class="ml-3 text-gray-700 text-base"><%= options[num] %></span>
                      </div>
                    </label>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Bottom Navigation -->
          <div class="bg-white border-t-2 border-gray-200 px-10 py-6 shadow-lg">
            <div class="max-w-4xl mx-auto flex items-center justify-between">
              <!-- Previous Button -->
              <% if @current_question_index > 0 %>
                <%= link_to exam_session_path(@exam_session, question: @current_question_index - 1),
                            class: "btn btn-secondary flex items-center" do %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                  이전 문제
                <% end %>
              <% else %>
                <div></div>
              <% end %>

              <!-- Bookmark Button -->
              <button type="button" aria-label="북마크" class="px-5 py-3 text-amber-600 hover:bg-amber-50 rounded-lg transition-all border-2 border-amber-300 hover:border-amber-400 bookmark-btn">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                </svg>
              </button>

              <!-- Bookmark List Modal (hidden by default) -->
              <div id="bookmark-list-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
                <div class="bg-white rounded-lg p-6 max-w-md w-full bookmark-list">
                  <h3 class="text-xl font-bold mb-4">북마크한 문제</h3>
                  <div class="space-y-2">
                    <!-- Bookmarked questions will be listed here -->
                  </div>
                  <button onclick="document.getElementById('bookmark-list-modal').classList.add('hidden')" class="mt-4 px-4 py-2 bg-gray-200 rounded-lg">닫기</button>
                </div>
              </div>

              <!-- Next/Submit Button -->
              <% if @current_question_index < @total_questions - 1 %>
                <%= link_to exam_session_path(@exam_session, question: @current_question_index + 1),
                            class: "btn btn-primary flex items-center" do %>
                  다음 문제
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                <% end %>
              <% else %>
                <%= link_to "제출하기",
                            complete_exam_session_path(@exam_session),
                            method: :post,
                            data: { confirm: '시험을 제출하시겠습니까?' },
                            class: "btn btn-accent btn-lg" %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="flex-1 flex items-center justify-center">
          <div class="text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <h3 class="mt-2 text-lg font-medium text-gray-900">문제가 없습니다</h3>
            <p class="mt-1 text-sm text-gray-500">이 시험에는 표시할 문제가 없습니다.</p>
            <%= link_to "돌아가기", @exam_session.study_set, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- JavaScript for Timer -->
<script>
  // Update timer every second
  let startTime = new Date("<%= @exam_session.started_at.iso8601 %>");

  function updateTimer() {
    let now = new Date();
    let elapsed = Math.floor((now - startTime) / 1000);

    let hours = Math.floor(elapsed / 3600);
    let minutes = Math.floor((elapsed % 3600) / 60);
    let seconds = elapsed % 60;

    let timeString = "";
    if (hours > 0) {
      timeString = `${hours}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
    } else {
      timeString = `${minutes}:${seconds.toString().padStart(2, '0')}`;
    }

    document.getElementById('timer').textContent = timeString;
  }

  setInterval(updateTimer, 1000);
</script>