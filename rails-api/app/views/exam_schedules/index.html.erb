<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">2026년 자격증 시험일정</h1>
          <p class="mt-2 text-sm text-gray-600">
            총 <%= @stats[:total_schedules] %>개 시험일정 | <%= @stats[:total_certifications] %>개 자격증
          </p>
        </div>

        <% if @stats[:upcoming_exam] %>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="text-sm text-blue-600">다음 시험</div>
            <div class="font-semibold text-blue-900"><%= @stats[:upcoming_exam].certification_name %></div>
            <div class="text-xs text-blue-700">
              <%= @stats[:upcoming_exam].written_exam_date&.strftime('%Y년 %m월 %d일') %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Filters -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="bg-white rounded-lg shadow-sm p-4">
      <div class="flex items-center space-x-4">
        <label class="text-sm font-medium text-gray-700">자격증 필터:</label>
        <%= form_with url: exam_schedules_path, method: :get, local: true, class: "flex items-center space-x-4" do |f| %>
          <%= select_tag :certification,
              options_for_select([['전체', '']] + @certifications.map{|c| [c, c]}, @certification),
              class: "rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
              onchange: "this.form.submit();" %>
          <%= hidden_field_tag :year, @year %>
        <% end %>

        <div class="ml-auto flex space-x-2">
          <% if user_signed_in? %>
            <%= link_to my_exam_schedules_path,
                class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
              </svg>
              내 관심 자격증
            <% end %>
          <% end %>

          <%= link_to calendar_exam_schedules_path,
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            달력 보기
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Schedule Cards -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      <% @schedules.each do |schedule| %>
        <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden">
          <!-- Card Header -->
          <div class="p-4 border-b bg-gradient-to-r from-indigo-50 to-blue-50">
            <div class="flex items-start justify-between">
              <div>
                <h3 class="text-lg font-semibold text-gray-900">
                  <%= schedule.certification_name %>
                </h3>
                <p class="text-sm text-gray-600 mt-1">
                  <%= schedule.exam_round %>회차
                </p>
              </div>

              <% if schedule.written_exam_date && schedule.written_exam_date >= Date.today %>
                <% days_left = (schedule.written_exam_date - Date.today).to_i %>
                <div class="px-2 py-1 text-xs font-semibold rounded-full
                            <%= days_left <= 30 ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %>">
                  D-<%= days_left %>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Card Body -->
          <div class="p-4 space-y-3">
            <!-- Written Exam -->
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-xs font-medium text-gray-500">필기시험</p>
                <p class="text-sm font-semibold text-gray-900">
                  <%= schedule.written_exam_date&.strftime('%Y년 %m월 %d일') || '미정' %>
                </p>
                <p class="text-xs text-gray-600 mt-1">
                  접수: <%= schedule.written_exam_reg_start&.strftime('%m/%d') %> ~
                  <%= schedule.written_exam_reg_end&.strftime('%m/%d') %>
                </p>
              </div>
            </div>

            <!-- Practical Exam -->
            <% if schedule.practical_exam_date %>
              <div class="flex items-start space-x-3">
                <div class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-xs font-medium text-gray-500">실기시험</p>
                  <p class="text-sm font-semibold text-gray-900">
                    <%= schedule.practical_exam_date.strftime('%Y년 %m월 %d일') %>
                  </p>
                  <p class="text-xs text-gray-600 mt-1">
                    접수: <%= schedule.practical_exam_reg_start&.strftime('%m/%d') %> ~
                    <%= schedule.practical_exam_reg_end&.strftime('%m/%d') %>
                  </p>
                </div>
              </div>
            <% end %>

            <!-- Location & Fee -->
            <div class="pt-2 border-t">
              <div class="flex items-center justify-between text-xs">
                <span class="text-gray-500">
                  <svg class="inline w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <%= schedule.exam_location || '전국' %>
                </span>
                <span class="text-gray-600 font-medium">
                  수수료: <%= number_to_currency(schedule.exam_fee || 0, unit: '₩', precision: 0) %>
                </span>
              </div>
            </div>
          </div>

          <!-- Card Footer -->
          <div class="px-4 py-3 bg-gray-50 border-t">
            <div class="flex items-center justify-between">
              <%= link_to exam_schedule_path(schedule),
                  class: "text-sm font-medium text-indigo-600 hover:text-indigo-800" do %>
                상세보기 →
              <% end %>

              <% if user_signed_in? %>
                <%= button_to add_interest_exam_schedules_path,
                    params: { certification_code: schedule.certification_code },
                    method: :post,
                    class: "text-xs text-gray-500 hover:text-gray-700" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                  </svg>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% if @schedules.empty? %>
      <div class="bg-white rounded-lg shadow-sm p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">시험일정이 없습니다</h3>
        <p class="mt-1 text-sm text-gray-500">선택한 조건에 맞는 시험일정이 없습니다.</p>
      </div>
    <% end %>
  </div>
</div>