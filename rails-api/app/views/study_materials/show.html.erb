<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex justify-between items-center mb-4">
        <h1 class="text-3xl font-bold"><%= @study_material.name %></h1>
        <div class="flex space-x-2">
          <% if @study_material.status == 'completed' %>
            <%= link_to "Knowledge Graph", "#",
                data: { study_material_id: @study_material.id },
                class: "px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 kg-visualize-btn" %>
          <% end %>
          <%= button_to "재처리", reprocess_study_set_study_material_path(@study_set, @study_material),
              method: :post,
              class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
        </div>
      </div>
      <%= link_to "← 자료 목록으로", study_set_study_materials_path(@study_set), class: "text-blue-600 hover:underline" %>
    </div>

    <!-- Status Card -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <h2 class="text-xl font-semibold mb-4">처리 상태</h2>
      <div class="grid md:grid-cols-4 gap-4">
        <div>
          <p class="text-sm text-gray-600">상태</p>
          <p class="text-lg font-semibold">
            <span class="px-3 py-1 rounded text-sm
              <%= @study_material.status == 'completed' ? 'bg-green-100 text-green-800' :
                  @study_material.status == 'processing' ? 'bg-blue-100 text-blue-800' :
                  @study_material.status == 'failed' ? 'bg-red-100 text-red-800' :
                  'bg-gray-100 text-gray-800' %>">
              <%= @study_material.status_display %>
            </span>
          </p>
        </div>
        <div>
          <p class="text-sm text-gray-600">문제 수</p>
          <p class="text-2xl font-bold text-blue-600"><%= @study_material.total_questions %></p>
        </div>
        <div>
          <p class="text-sm text-gray-600">지문 수</p>
          <p class="text-2xl font-bold text-green-600"><%= @study_material.passages.count %></p>
        </div>
        <div>
          <p class="text-sm text-gray-600">개념 수</p>
          <p class="text-2xl font-bold text-purple-600"><%= @study_material.knowledge_nodes.count %></p>
        </div>
      </div>
    </div>

    <!-- Extraction Stats -->
    <% if @extraction_stats.present? %>
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4">추출 통계</h2>
        <div class="grid md:grid-cols-3 gap-4">
          <div>
            <p class="text-sm text-gray-600">지문이 있는 문제</p>
            <p class="text-lg font-semibold"><%= @extraction_stats[:questions_with_passages] || 0 %>개</p>
          </div>
          <div>
            <p class="text-sm text-gray-600">평균 난이도</p>
            <p class="text-lg font-semibold"><%= @extraction_stats[:avg_difficulty]&.round(2) || 'N/A' %></p>
          </div>
          <div>
            <p class="text-sm text-gray-600">평균 신뢰도</p>
            <p class="text-lg font-semibold"><%= (@extraction_stats[:avg_confidence] * 100)&.round(1) || 'N/A' %>%</p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Top Concepts -->
    <% if @knowledge_nodes.any? %>
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-semibold mb-4">주요 개념 (Top 10)</h2>
        <div class="space-y-2">
          <% @knowledge_nodes.each do |node| %>
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
              <div>
                <span class="font-semibold"><%= node.name %></span>
                <span class="text-sm text-gray-600 ml-2">(<%= node.level %>)</span>
              </div>
              <div class="flex items-center space-x-4">
                <span class="text-sm text-gray-600">중요도: <%= node.importance %>/10</span>
                <span class="text-sm text-gray-600">난이도: <%= node.difficulty %>/5</span>
                <span class="text-sm text-gray-600">문제 수: <%= node.questions.count %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Questions List -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4">문제 목록 (<%= @study_material.total_questions %>)</h2>
      
      <% if @questions.any? %>
        <div class="space-y-3">
          <% @questions.each do |question| %>
            <div class="border rounded p-4 hover:bg-gray-50 transition">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <span class="font-semibold">Q<%= question.question_number %></span>
                  <p class="mt-2 text-gray-800"><%= question.content.truncate(150) %></p>
                  <div class="mt-2 flex space-x-4 text-sm text-gray-600">
                    <span>난이도: <%= question.difficulty || 'N/A' %></span>
                    <span>챕터: <%= question.chapter || 'N/A' %></span>
                    <% if question.question_passages.any? %>
                      <span class="text-blue-600">📄 지문 포함</span>
                    <% end %>
                  </div>
                </div>
                <div class="flex flex-col space-y-1">
                  <%= button_to "상세", "#", class: "px-3 py-1 text-sm bg-gray-200 rounded hover:bg-gray-300" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="mt-6">
          <%= paginate @questions if @questions.respond_to?(:current_page) %>
        </div>
      <% else %>
        <p class="text-center text-gray-500 py-8">문제가 아직 추출되지 않았습니다.</p>
      <% end %>
    </div>
  </div>
</div>

<!-- Knowledge Graph Modal (will be activated by JavaScript) -->
<div id="kg-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50">
  <div class="container mx-auto h-full flex items-center justify-center p-4">
    <div class="bg-white rounded-lg w-full h-5/6 max-w-7xl flex flex-col">
      <div class="p-4 border-b flex justify-between items-center">
        <h2 class="text-xl font-bold">Knowledge Graph - <%= @study_material.name %></h2>
        <button id="close-kg-modal" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300">닫기</button>
      </div>
      <div class="flex-1 p-4">
        <div id="knowledge-graph-container" class="w-full h-full bg-gray-100 rounded"></div>
      </div>
    </div>
  </div>
</div>
