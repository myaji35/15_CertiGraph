<%# Modern, Highly Readable Study Material Detail Page %>
<div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-purple-50">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-7xl mx-auto">
      <%# Header with Breadcrumb %>
      <div class="mb-8">
        <%= link_to study_set_study_materials_path(@study_set), class: "inline-flex items-center text-blue-600 hover:text-blue-800 font-medium mb-4 transition-colors" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          자료 목록으로 돌아가기
        <% end %>
        
        <div class="flex justify-between items-start">
          <div class="flex-1">
            <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= @study_material.name %></h1>
            <p class="text-gray-600 text-lg">학습 자료 상세 정보 및 통계</p>
          </div>
          <div class="flex space-x-3">
            <% if @study_material.status == 'completed' %>
              <%= link_to study_set_study_material_knowledge_graphs_path(@study_set, @study_material, @study_material),
                  class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-xl hover:from-purple-700 hover:to-indigo-700 shadow-lg hover:shadow-xl transition-all transform hover:scale-105" do %>
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                </svg>
                Knowledge Graph
              <% end %>
            <% end %>
            <%= button_to reprocess_study_set_study_material_path(@study_set, @study_material),
                method: :post,
                class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-cyan-600 text-white font-semibold rounded-xl hover:from-blue-700 hover:to-cyan-700 shadow-lg hover:shadow-xl transition-all transform hover:scale-105" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
              재처리
            <% end %>
          </div>
        </div>
      </div>

      <%# Enhanced Status Cards with Gradients and Icons %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <%# Total Questions Card %>
        <div class="relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all transform hover:scale-105">
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500 to-blue-700"></div>
          <div class="relative p-6 text-white">
            <div class="flex items-center justify-between mb-4">
              <div class="flex-1">
                <p class="text-blue-100 text-sm font-medium uppercase tracking-wide">총 문제</p>
                <p class="text-5xl font-bold mt-2"><%= @study_material.total_questions %></p>
              </div>
              <div class="bg-white bg-opacity-20 p-4 rounded-xl">
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
            </div>
            <div class="flex items-center text-blue-100 text-sm">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              추출 완료
            </div>
          </div>
        </div>

        <%# Passages Card %>
        <div class="relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all transform hover:scale-105">
          <div class="absolute inset-0 bg-gradient-to-br from-green-500 to-emerald-700"></div>
          <div class="relative p-6 text-white">
            <div class="flex items-center justify-between mb-4">
              <div class="flex-1">
                <p class="text-green-100 text-sm font-medium uppercase tracking-wide">학습 지문</p>
                <p class="text-5xl font-bold mt-2"><%= @study_material.passages.count %></p>
              </div>
              <div class="bg-white bg-opacity-20 p-4 rounded-xl">
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
            </div>
            <div class="flex items-center text-green-100 text-sm">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
              </svg>
              지문 분석 완료
            </div>
          </div>
        </div>

        <%# Concepts Card %>
        <div class="relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all transform hover:scale-105">
          <div class="absolute inset-0 bg-gradient-to-br from-purple-500 to-pink-600"></div>
          <div class="relative p-6 text-white">
            <div class="flex items-center justify-between mb-4">
              <div class="flex-1">
                <p class="text-purple-100 text-sm font-medium uppercase tracking-wide">핵심 개념</p>
                <p class="text-5xl font-bold mt-2"><%= @study_material.knowledge_nodes.count %></p>
              </div>
              <div class="bg-white bg-opacity-20 p-4 rounded-xl">
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              </div>
            </div>
            <div class="flex items-center text-purple-100 text-sm">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              개념 추출 완료
            </div>
          </div>
        </div>

        <%# Processing Status Card %>
        <div class="relative overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all transform hover:scale-105">
          <div class="absolute inset-0 bg-gradient-to-br from-amber-500 to-orange-600"></div>
          <div class="relative p-6 text-white">
            <div class="flex items-center justify-between mb-4">
              <div class="flex-1">
                <p class="text-amber-100 text-sm font-medium uppercase tracking-wide">처리 상태</p>
                <p class="text-2xl font-bold mt-2">
                  <span class="px-4 py-2 rounded-xl text-sm font-semibold
                    <%= @study_material.status == 'completed' ? 'bg-green-500' :
                        @study_material.status == 'processing' ? 'bg-blue-500' :
                        @study_material.status == 'failed' ? 'bg-red-500' :
                        'bg-gray-500' %>">
                    <%= @study_material.status_display %>
                  </span>
                </p>
              </div>
              <div class="bg-white bg-opacity-20 p-4 rounded-xl">
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
            </div>
            <div class="flex items-center text-amber-100 text-sm">
              <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
              </svg>
              <%= @study_material.status == 'completed' ? '처리 완료' : '처리 중' %>
            </div>
          </div>
        </div>
      </div>

      <%# Warning/Info Message if no questions %>
      <% if @study_material.total_questions == 0 %>
        <div class="bg-gradient-to-r from-yellow-50 to-amber-50 border-l-4 border-yellow-500 rounded-xl shadow-lg p-6 mb-8">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-8 w-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
            </div>
            <div class="ml-4 flex-1">
              <h3 class="text-lg font-bold text-yellow-900">⚠️ PDF 파일을 처리하여 문제를 추출합니다</h3>
              <p class="mt-2 text-yellow-800">
                PDF 파일이 업로드되면 자동으로 문제, 지문, 개념이 추출됩니다. 
                처리가 완료될 때까지 잠시만 기다려주세요.
              </p>
              <div class="mt-4">
                <%= button_to "지금 처리 시작", reprocess_study_set_study_material_path(@study_set, @study_material),
                    method: :post,
                    class: "inline-flex items-center px-6 py-3 bg-yellow-600 text-white font-semibold rounded-lg hover:bg-yellow-700 shadow-md hover:shadow-lg transition-all" do %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                  처리 시작하기
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%# Extraction Stats %>
      <% if @extraction_stats.present? %>
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-7 h-7 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            추출 통계
          </h2>
          <div class="grid md:grid-cols-3 gap-6">
            <div class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-xl p-6 border border-blue-200">
              <p class="text-sm font-semibold text-blue-700 uppercase tracking-wide mb-2">지문이 있는 문제</p>
              <p class="text-4xl font-bold text-blue-900"><%= @extraction_stats[:questions_with_passages] || 0 %><span class="text-xl text-blue-600">개</span></p>
            </div>
            <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl p-6 border border-green-200">
              <p class="text-sm font-semibold text-green-700 uppercase tracking-wide mb-2">평균 난이도</p>
              <p class="text-4xl font-bold text-green-900"><%= @extraction_stats[:avg_difficulty]&.round(2) || 'N/A' %></p>
            </div>
            <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-6 border border-purple-200">
              <p class="text-sm font-semibold text-purple-700 uppercase tracking-wide mb-2">평균 신뢰도</p>
              <p class="text-4xl font-bold text-purple-900"><%= (@extraction_stats[:avg_confidence] * 100)&.round(1) || 'N/A' %><span class="text-xl text-purple-600">%</span></p>
            </div>
          </div>
        </div>
      <% end %>

      <%# Top Concepts %>
      <% if @knowledge_nodes.any? %>
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-8">
          <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
            <svg class="w-7 h-7 mr-3 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
            주요 개념 (Top 10)
          </h2>
          <div class="space-y-3">
            <% @knowledge_nodes.each_with_index do |node, index| %>
              <div class="flex items-center justify-between p-5 bg-gradient-to-r from-gray-50 to-blue-50 rounded-xl border border-gray-200 hover:shadow-md transition-all">
                <div class="flex items-center flex-1">
                  <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold shadow-lg">
                    <%= index + 1 %>
                  </div>
                  <div class="ml-4 flex-1">
                    <span class="font-bold text-lg text-gray-900"><%= node.name %></span>
                    <span class="ml-3 px-3 py-1 text-xs font-semibold bg-blue-100 text-blue-800 rounded-full"><%= node.level %></span>
                  </div>
                </div>
                <div class="flex items-center space-x-6 text-sm">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-yellow-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                    <span class="font-semibold text-gray-700">중요도 <%= node.importance %>/10</span>
                  </div>
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-red-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
                    </svg>
                    <span class="font-semibold text-gray-700">난이도 <%= node.difficulty %>/5</span>
                  </div>
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                      <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
                    </svg>
                    <span class="font-semibold text-gray-700">문제 <%= node.questions.count %>개</span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <%# Questions List %>
      <div class="bg-white rounded-2xl shadow-xl p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center justify-between">
          <div class="flex items-center">
            <svg class="w-7 h-7 mr-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            문제 목록
          </div>
          <span class="text-lg font-semibold text-blue-600">총 <%= @study_material.total_questions %>개</span>
        </h2>
        
        <% if @questions.any? %>
          <div class="space-y-4">
            <% @questions.each do |question| %>
              <div class="border-2 border-gray-200 rounded-xl p-6 hover:border-blue-400 hover:shadow-lg transition-all bg-gradient-to-r from-white to-gray-50">
                <div class="flex justify-between items-start">
                  <div class="flex-1">
                    <div class="flex items-center mb-3">
                      <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-blue-600 to-cyan-600 text-white shadow-md">
                        Q<%= question.question_number %>
                      </span>
                    </div>
                    <p class="text-gray-900 text-lg font-medium leading-relaxed"><%= question.content.truncate(150) %></p>
                    <div class="mt-4 flex flex-wrap gap-3 text-sm">
                      <span class="inline-flex items-center px-3 py-1 rounded-full bg-yellow-100 text-yellow-800 font-medium">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
                        </svg>
                        난이도: <%= question.difficulty || 'N/A' %>
                      </span>
                      <span class="inline-flex items-center px-3 py-1 rounded-full bg-purple-100 text-purple-800 font-medium">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" />
                        </svg>
                        챕터: <%= question.chapter || 'N/A' %>
                      </span>
                      <% if question.question_passages.any? %>
                        <span class="inline-flex items-center px-3 py-1 rounded-full bg-blue-100 text-blue-800 font-medium">
                          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                          </svg>
                          지문 포함
                        </span>
                      <% end %>
                    </div>
                  </div>
                  <div class="ml-6">
                    <%= button_to "#", class: "px-6 py-3 bg-gradient-to-r from-gray-600 to-gray-700 text-white font-semibold rounded-lg hover:from-gray-700 hover:to-gray-800 shadow-md hover:shadow-lg transition-all" do %>
                      상세 보기
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <div class="mt-8">
            <%= paginate @questions if @questions.respond_to?(:current_page) %>
          </div>
        <% else %>
          <div class="text-center py-16">
            <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <p class="text-xl font-semibold text-gray-700 mb-2">문제가 아직 추출되지 않았습니다</p>
            <p class="text-gray-500">PDF 파일을 업로드하고 처리를 시작해주세요.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

