<div id="<%= dom_id(study_material) %>" class="group bg-white rounded-lg border border-[#e7edf3] p-4 hover:shadow-md transition-all card-hover">
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <div class="flex-shrink-0">
        <div class="w-12 h-12 bg-red-50 rounded-lg flex items-center justify-center">
          <span class="material-symbols-outlined text-red-500">picture_as_pdf</span>
        </div>
      </div>
      <div class="flex-1">
        <h3 class="text-sm font-medium text-gray-900">
          <%= study_material.name || study_material.file_name %>
        </h3>
        <div class="flex items-center mt-1 space-x-4 text-xs text-[#4c739a]">
          <span class="inline-flex items-center">
            <span class="material-symbols-outlined text-sm mr-1">schedule</span>
            <%= study_material.created_at&.strftime("%Y-%m-%d %H:%M") || "날짜 정보 없음" %>
          </span>
          <span class="inline-flex items-center">
            <% status_color = case study_material.status
              when 'pending' then 'text-yellow-600 bg-yellow-100'
              when 'processing' then 'text-blue-600 bg-blue-100'
              when 'completed' then 'text-green-600 bg-green-100'
              when 'failed' then 'text-red-600 bg-red-100'
              else 'text-gray-600 bg-gray-100'
            end %>
            <span class="px-2 py-1 <%= status_color %> rounded-full text-xs font-medium">
              <%= study_material.status_display %>
              <% if study_material.processing_completed? %>
                (<%= study_material.total_questions %>문제)
              <% end %>
            </span>
          </span>
          <% if study_material.error_message.present? %>
            <span class="text-red-600 text-xs" title="<%= study_material.error_message %>">
              오류 발생
            </span>
          <% end %>
        </div>

        <% if study_material.status == 'processing' %>
          <!-- 파싱 진행 중 프로그레스 바 -->
          <div class="mt-3 bg-[#137fec]/5 rounded-lg p-3 border border-[#137fec]/20">
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-[#137fec]">문제 추출 진행 중</span>
              <span class="text-xs text-[#137fec] animate-pulse">처리 중...</span>
            </div>
            <div class="relative">
              <div class="bg-[#137fec]/20 rounded-full h-3 overflow-hidden">
                <div class="bg-gradient-to-r from-[#137fec] to-[#0968d3] h-3 rounded-full relative overflow-hidden">
                  <div class="absolute inset-0 bg-white/30 animate-pulse"></div>
                  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/40 to-transparent animate-shimmer"></div>
                </div>
              </div>
              <div class="flex justify-between mt-1">
                <span class="text-xs text-[#137fec]">0%</span>
                <span class="text-xs text-[#137fec] animate-pulse">분석 중...</span>
                <span class="text-xs text-[#137fec]">100%</span>
              </div>
            </div>
            <p class="text-xs text-[#137fec] mt-2 flex items-center">
              <span class="material-symbols-outlined text-sm mr-1 animate-spin">sync</span>
              PDF에서 문제를 추출하고 있습니다. 파일 크기에 따라 1-3분 정도 소요됩니다.
            </p>
          </div>
        <% elsif study_material.status == 'completed' %>
          <!-- 처리 완료 상태 -->
          <div class="mt-3 bg-green-50 rounded-lg p-3 border border-green-200">
            <div class="flex items-center">
              <span class="material-symbols-outlined text-green-600 mr-2">check_circle</span>
              <span class="text-sm font-medium text-green-700">
                문제 추출 완료 - <%= study_material.total_questions || 0 %>개 문제
              </span>
            </div>
          </div>
        <% elsif study_material.status == 'failed' %>
          <!-- 처리 실패 상태 -->
          <div class="mt-3 bg-red-50 rounded-lg p-3 border border-red-200">
            <div class="flex items-center">
              <span class="material-symbols-outlined text-red-600 mr-2">error</span>
              <span class="text-sm font-medium text-red-700">
                처리 실패: <%= study_material.error_message || "알 수 없는 오류" %>
              </span>
            </div>
            <%= button_to "다시 시도", process_study_set_study_material_path(study_set, study_material),
                        method: :post,
                        class: "mt-2 text-xs text-red-600 underline hover:no-underline",
                        data: { turbo_method: :post } if study_material.persisted? %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="flex items-center space-x-2">
      <% if study_material.persisted? && study_material.status == 'pending' %>
        <%= button_to process_study_set_study_material_path(study_set, study_material),
                    method: :post,
                    remote: true,
                    class: "btn-primary text-sm",
                    title: "문제 추출 시작",
                    data: { turbo_method: :post } do %>
          <span class="material-symbols-outlined text-base mr-2">play_circle</span>
          문제 추출
        <% end %>
      <% elsif study_material.persisted? && study_material.status == 'completed' %>
        <button class="p-2 text-[#4c739a] hover:text-[#137fec] hover:bg-[#137fec]/10 rounded-lg transition-colors">
          <span class="material-symbols-outlined">visibility</span>
        </button>
      <% end %>
      <% if study_material.persisted? %>
        <%= link_to study_set_study_material_path(study_set, study_material),
                    method: :delete,
                    data: { confirm: '정말 삭제하시겠습니까?' },
                    class: "p-2 text-[#4c739a] hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors" do %>
          <span class="material-symbols-outlined">delete</span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>