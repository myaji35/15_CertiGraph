<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-2">새 학습 자료 업로드</h1>
      <%= link_to "← 돌아가기", study_set_study_materials_path(@study_set), class: "text-blue-600 hover:underline" %>
    </div>

    <div class="bg-white rounded-lg shadow p-8">
      <%= form_with model: [@study_set, @study_material], local: true, class: "space-y-6" do |f| %>
        
        <!-- Name -->
        <div>
          <label class="block text-sm font-medium mb-2">자료명 *</label>
          <%= f.text_field :name, 
              placeholder: "예: 정보처리기사 2023년 1회 기출문제",
              class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
        </div>

        <!-- Description -->
        <div>
          <label class="block text-sm font-medium mb-2">설명</label>
          <%= f.text_area :description,
              rows: 3,
              placeholder: "자료에 대한 간단한 설명을 입력하세요",
              class: "w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
        </div>

        <!-- PDF File Upload -->
        <div>
          <label class="block text-sm font-medium mb-2">PDF 파일 *</label>
          <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-blue-500 transition">
            <div class="space-y-1 text-center">
              <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
              <div class="flex text-sm text-gray-600">
                <label class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500">
                  <span>파일 선택</span>
                  <%= f.file_field :pdf_file, 
                      accept: "application/pdf",
                      class: "sr-only",
                      id: "pdf-file-input" %>
                </label>
                <p class="pl-1">또는 드래그 앤 드롭</p>
              </div>
              <p class="text-xs text-gray-500">PDF 파일 (최대 50MB)</p>
            </div>
          </div>
          <div id="file-name-display" class="mt-2 text-sm text-gray-600 hidden">
            선택된 파일: <span id="selected-file-name" class="font-semibold"></span>
          </div>
        </div>

        <!-- Category -->
        <div>
          <label class="block text-sm font-medium mb-2">카테고리</label>
          <%= f.select :category,
              options_for_select([
                ['자격증 - IT', 'certification_it'],
                ['자격증 - 금융', 'certification_finance'],
                ['자격증 - 기타', 'certification_other'],
                ['대학 - 전공', 'university_major'],
                ['대학 - 교양', 'university_general'],
                ['기타', 'other']
              ]),
              { include_blank: '선택하세요' },
              class: "w-full px-4 py-2 border rounded-lg" %>
        </div>

        <!-- Difficulty Level -->
        <div>
          <label class="block text-sm font-medium mb-2">난이도</label>
          <%= f.select :difficulty_level,
              options_for_select([
                ['초급', 'beginner'],
                ['중급', 'intermediate'],
                ['고급', 'advanced'],
                ['전문가', 'expert']
              ]),
              { include_blank: '선택하세요' },
              class: "w-full px-4 py-2 border rounded-lg" %>
        </div>

        <!-- Actions -->
        <div class="flex justify-end space-x-4 pt-4">
          <%= link_to "취소", study_set_study_materials_path(@study_set),
              class: "px-6 py-2 border rounded-lg hover:bg-gray-50" %>
          <%= f.submit "업로드 시작",
              class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium" %>
        </div>

      <% end %>
    </div>

    <!-- Progress Indicator (hidden initially) -->
    <div id="upload-progress" class="hidden mt-8">
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold mb-4">업로드 중...</h3>
        <div class="w-full bg-gray-200 rounded-full h-3">
          <div id="progress-bar" class="bg-blue-600 h-3 rounded-full transition-all duration-300" style="width: 0%"></div>
        </div>
        <p id="progress-text" class="mt-2 text-sm text-gray-600">0%</p>
      </div>
    </div>
  </div>
</div>

<script>
  // File input display
  document.getElementById('pdf-file-input').addEventListener('change', function(e) {
    const fileName = e.target.files[0]?.name;
    if (fileName) {
      document.getElementById('selected-file-name').textContent = fileName;
      document.getElementById('file-name-display').classList.remove('hidden');
    }
  });
</script>
