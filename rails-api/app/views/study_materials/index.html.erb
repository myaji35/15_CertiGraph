<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold">학습 자료</h1>
      <%= link_to "새 자료 업로드", new_study_set_study_material_path(@study_set),
          class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
    </div>

    <% if @study_materials.any? %>
      <div class="grid gap-4">
        <% @study_materials.each do |material| %>
          <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <h3 class="text-xl font-semibold mb-2"><%= material.name %></h3>
                <div class="text-gray-600 space-y-1">
                  <p>
                    상태:
                    <span class="px-2 py-1 rounded text-sm
                      <%= material.status == 'completed' ? 'bg-green-100 text-green-800' :
                          material.status == 'processing' ? 'bg-blue-100 text-blue-800' :
                          material.status == 'failed' ? 'bg-red-100 text-red-800' :
                          'bg-gray-100 text-gray-800' %>">
                      <%= material.status_display %>
                    </span>
                  </p>
                  <p>파일: <%= material.file_name %></p>
                  <p>문제 수: <%= material.total_questions %>문제</p>
                  <p>개념 수: <%= material.knowledge_nodes.count %>개</p>
                  <p>생성일: <%= material.created_at.strftime('%Y-%m-%d %H:%M') %></p>
                </div>
              </div>
              <div class="flex flex-col space-y-2">
                <%= link_to "자세히 보기", study_set_study_material_path(@study_set, material),
                    class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 text-center" %>
                
                <% if material.status == 'completed' %>
                  <%= link_to "Knowledge Graph", "#",
                      data: { study_material_id: material.id },
                      class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 text-center kg-link" %>
                <% end %>
                
                <%= button_to "삭제", study_set_study_material_path(@study_set, material),
                    method: :delete,
                    data: { confirm: '정말 삭제하시겠습니까?' },
                    class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-8">
        <%= paginate @study_materials if @study_materials.respond_to?(:current_page) %>
      </div>
    <% else %>
      <div class="text-center py-16 bg-white rounded-lg shadow">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">학습 자료가 없습니다</h3>
        <p class="mt-2 text-sm text-gray-500">첫 PDF 자료를 업로드하세요!</p>
        <%= link_to "자료 업로드", new_study_set_study_material_path(@study_set),
            class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>
