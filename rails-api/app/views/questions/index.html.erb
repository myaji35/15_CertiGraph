<div class="min-h-screen bg-gray-50">
  <%= render 'shared/navbar' %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @study_set.title %></h1>
          <p class="text-gray-600 mt-2">총 <%= @total_count %>개의 문제</p>
        </div>
        <%= link_to '← 학습 세트로 돌아가기', study_set_path(@study_set), class: 'text-blue-600 hover:text-blue-800' %>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
      <% @study_set.study_materials.each do |material| %>
        <div class="bg-white rounded-lg shadow p-6">
          <div class="text-sm text-gray-600"><%= material.name %></div>
          <div class="text-2xl font-bold text-blue-600"><%= material.questions.count %>개</div>
        </div>
      <% end %>
    </div>

    <!-- Questions List -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">문제 목록</h2>
      </div>

      <div class="divide-y divide-gray-200">
        <% @questions.each do |question| %>
          <div class="p-6 hover:bg-gray-50 transition">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <!-- Question Number -->
                <div class="flex items-center mb-3">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 mr-3">
                    Q<%= question.question_number %>
                  </span>
                  <% if question.difficulty.present? %>
                    <span class="text-sm text-gray-500">
                      난이도: <%= question.difficulty %>
                    </span>
                  <% end %>
                </div>

                <!-- Passage (if available) - SHOWN FIRST -->
                <% if question.passage.present? %>
                  <div class="mb-4 p-4 bg-gray-50 border-l-4 border-blue-500 rounded">
                    <div class="text-gray-800 space-y-2">
                      <% question.passage.split("\n").each do |line| %>
                        <% next if line.strip.empty? %>
                        <div class="flex items-start">
                          <% if line.match?(/^[ㄱ-ㅎ]\s/) %>
                            <span class="font-semibold text-blue-700 mr-2 flex-shrink-0"><%= line[0] %></span>
                            <span class="text-gray-800"><%= line[1..-1].strip %></span>
                          <% elsif line.match?(/^○\s/) %>
                            <span class="text-blue-600 mr-2 flex-shrink-0">○</span>
                            <span class="text-gray-800"><%= line[1..-1].strip %></span>
                          <% else %>
                            <span class="text-gray-800"><%= line.strip %></span>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>

                <!-- Question Content -->
                <p class="text-gray-900 font-medium mb-4"><%= question.content %></p>

                <!-- Options -->
                <% if question.options.present? %>
                  <div class="space-y-2 mb-4">
                    <% question.options.each do |key, value| %>
                      <div class="flex items-start">
                        <span class="font-medium text-gray-700 mr-2"><%= key %></span>
                        <span class="text-gray-600"><%= value %></span>
                      </div>
                    <% end %>
                  </div>
                <% end %>

                <!-- Answer (if available) -->
                <% if question.answer.present? %>
                  <div class="mt-4 p-3 bg-green-50 rounded-lg">
                    <span class="text-sm font-medium text-green-800">정답: <%= question.answer %></span>
                  </div>
                <% end %>

                <!-- Explanation (if available) -->
                <% if question.explanation.present? %>
                  <div class="mt-4 p-3 bg-blue-50 rounded-lg">
                    <p class="text-sm text-blue-900"><strong>해설:</strong> <%= question.explanation %></p>
                  </div>
                <% end %>

                <!-- Metadata -->
                <div class="mt-4 flex items-center gap-4 text-sm text-gray-500">
                  <span><%= question.study_material.name %></span>
                  <% if question.topic.present? %>
                    <span>• <%= question.topic %></span>
                  <% end %>
                </div>
              </div>

              <!-- Actions -->
              <div class="ml-4">
                <%= link_to '상세', question_path(question), class: 'text-blue-600 hover:text-blue-800 text-sm' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="px-6 py-4 border-t border-gray-200">
        <div class="flex items-center justify-between">
          <div class="text-sm text-gray-700">
            페이지 <%= @current_page %> / <%= @total_pages %> (총 <%= @total_count %>개)
          </div>
          <div class="flex gap-2">
            <% if @current_page > 1 %>
              <%= link_to '← 이전', study_set_questions_path(@study_set, page: @current_page - 1), class: 'px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50' %>
            <% end %>
            <% if @current_page < @total_pages %>
              <%= link_to '다음 →', study_set_questions_path(@study_set, page: @current_page + 1), class: 'px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
