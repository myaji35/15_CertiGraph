<!-- Toss Payments SDK -->
<script src="https://js.tosspayments.com/v1/payment-widget"></script>

<script>
  let selectedPlan = null;
  let paymentWidget = null;

  async function selectPlan(planType) {
    selectedPlan = planType;

    try {
      // Request payment from backend
      const response = await fetch('/payments/request', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
        },
        body: JSON.stringify({ plan_type: planType })
      });

      const data = await response.json();

      if (!data.success) {
        alert('결제 요청 실패: ' + data.error);
        return;
      }

      // Initialize Toss Payment Widget
      paymentWidget = await loadTossPayments(data.clientKey);

      // Render payment widget
      await paymentWidget.renderPaymentMethods(
        '#payment-method',
        { value: data.payment.amount, currency: data.payment.currency }
      );

      await paymentWidget.renderAgreement('#agreement');

      // Show payment widget
      document.getElementById('payment-widget').classList.remove('hidden');

      // Setup payment button
      document.getElementById('payment-button').onclick = async () => {
        try {
          await paymentWidget.requestPayment({
            orderId: data.payment.order_id,
            orderName: planType === 'vip_pass' ? 'VIP 패스' : '시즌 패스',
            successUrl: data.successUrl,
            failUrl: data.failUrl,
            customerEmail: '<%= current_user&.email %>',
            customerName: '<%= current_user&.name || current_user&.email %>'
          });
        } catch (error) {
          console.error('Payment request failed:', error);
          alert('결제 요청 중 오류가 발생했습니다.');
        }
      };
    } catch (error) {
      console.error('Error:', error);
      alert('결제 초기화 중 오류가 발생했습니다.');
    }
  }

  function loadTossPayments(clientKey) {
    return new Promise((resolve) => {
      const tossPayments = TossPayments(clientKey);
      resolve(tossPayments.widgets({ customerKey: 'customer_<%= current_user&.id %>' }));
    });
  }
</script>
