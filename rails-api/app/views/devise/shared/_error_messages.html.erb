<% if resource.errors.any? %>
  <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-lg" role="alert">
    <div class="flex items-start">
      <span class="material-symbols-outlined text-red-600 text-2xl mr-3 flex-shrink-0">
        error
      </span>
      <div class="flex-1">
        <h3 class="text-red-800 font-semibold text-lg mb-2">
          <%= I18n.t("errors.messages.not_saved",
                     count: resource.errors.count,
                     resource: resource.class.model_name.human.downcase) %>
        </h3>
        <ul class="list-disc list-inside text-red-700 space-y-1">
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
