<div class="min-h-screen bg-gradient-to-br from-purple-50 to-pink-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <div class="flex justify-center mb-6">
        <div class="w-20 h-20 bg-blue-600 rounded-full flex items-center justify-center">
          <span class="text-white text-3xl">🧠</span>
        </div>
      </div>
      <h2 class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">ExamsGraph</h2>
      <p class="mt-2 text-lg text-gray-600">회원가입</p>
      <p class="mt-1 text-sm text-gray-500">AI 자격증 마스터와 함께 시험 준비를 시작하세요</p>
    </div>

    <div class="mt-8 bg-white py-8 px-4 shadow-xl rounded-lg sm:px-10">
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Base errors (SQL Injection, XSS, etc.) -->
      <% if resource.errors[:base].any? %>
        <div class="mb-4 bg-red-50 border-l-4 border-red-400 p-4 rounded-lg" role="alert">
          <div class="flex items-start">
            <span class="text-red-600 text-xl mr-2">⚠️</span>
            <div>
              <% resource.errors[:base].each do |error_message| %>
                <p class="text-red-700"><%= error_message %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Flash Messages -->
      <% if flash[:alert] %>
        <div class="mb-4 bg-red-50 border-l-4 border-red-400 p-4 rounded-lg" role="alert">
          <div class="flex items-start">
            <span class="text-red-600 text-xl mr-2">⚠️</span>
            <p class="text-red-700"><%= flash[:alert] %></p>
          </div>
        </div>
      <% end %>
      <% if flash[:notice] %>
        <div class="mb-4 bg-green-50 border-l-4 border-green-400 p-4 rounded-lg" role="alert">
          <div class="flex items-start">
            <span class="text-green-600 text-xl mr-2">✓</span>
            <p class="text-green-700"><%= flash[:notice] %></p>
          </div>
        </div>
      <% end %>

      <!-- Network Error Message (hidden by default) -->
      <div id="network-error" class="mb-4 bg-red-50 border-l-4 border-red-400 p-4 rounded-lg hidden" role="alert">
        <div class="flex items-start">
          <span class="text-red-600 text-xl mr-2">⚠️</span>
          <div class="flex-1">
            <p class="text-red-700 font-medium">네트워크 오류</p>
            <p class="text-red-600 text-sm mt-1">서버에 연결할 수 없습니다. 인터넷 연결을 확인하고 다시 시도해주세요.</p>
            <button type="button" id="retry-button" class="mt-3 px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500">
              다시 시도
            </button>
          </div>
        </div>
      </div>

      <!-- Google OAuth Button -->
      <div class="mb-6">
        <%= button_to user_google_oauth2_omniauth_authorize_path,
            method: :post,
            data: { turbo: false },
            class: "w-full flex justify-center items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Google로 계속하기
        <% end %>
      </div>

      <div class="relative mb-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">또는</span>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6", novalidate: true, data: { turbo: false } }) do |f| %>
        <div>
          <%= f.label :email, "이메일 주소", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "appearance-none block w-full px-3 py-2 border #{resource.errors[:email].any? ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                placeholder: "이메일 주소를 입력하세요",
                required: true %>
          </div>
          <% if resource.errors[:email].any? %>
            <% resource.errors[:email].each do |error_message| %>
              <p class="mt-1 text-sm text-red-600"><%= error_message %></p>
            <% end %>
          <% end %>
        </div>

        <div>
          <%= f.label :password, "비밀번호", class: "block text-sm font-medium text-gray-700" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-500">(<%= @minimum_password_length %>자 이상, 대문자, 소문자, 숫자, 특수문자 포함)</span>
          <% end %>
          <div class="mt-1">
            <%= f.password_field :password,
                autocomplete: "new-password",
                class: "appearance-none block w-full px-3 py-2 border #{resource.errors[:password].any? ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                placeholder: "비밀번호를 입력하세요 (예: Pass123!@)",
                required: true %>
          </div>
          <% if resource.errors[:password].any? %>
            <% resource.errors[:password].each do |error_message| %>
              <p class="mt-1 text-sm text-red-600"><%= error_message %></p>
            <% end %>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password_confirmation,
                autocomplete: "new-password",
                class: "appearance-none block w-full px-3 py-2 border #{resource.errors[:password_confirmation].any? ? 'border-red-500' : 'border-gray-300'} rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                placeholder: "비밀번호를 다시 입력하세요",
                required: true %>
          </div>
          <% if resource.errors[:password_confirmation].any? %>
            <p class="mt-1 text-sm text-red-600">비밀번호가 일치하지 않습니다</p>
          <% end %>
        </div>

        <!-- 약관 동의 체크박스 -->
        <div class="space-y-3 pt-4 border-t border-gray-200">
          <div class="flex items-start">
            <div class="flex items-center h-5">
              <%= f.check_box :terms_agreed, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            </div>
            <div class="ml-3 text-sm">
              <%= f.label :terms_agreed, class: "font-medium text-gray-700" do %>
                <%= Rails.env.production? ? raw('<span class="text-red-500">*</span> ') : '' %>서비스 약관에 동의합니다 <%= Rails.env.production? ? '(필수)' : '(선택)' %>
              <% end %>
            </div>
          </div>
          <% if resource.errors[:terms_agreed].any? %>
            <% resource.errors[:terms_agreed].each do |error_message| %>
              <p class="ml-8 text-sm text-red-600"><%= error_message %></p>
            <% end %>
          <% end %>

          <div class="flex items-start">
            <div class="flex items-center h-5">
              <%= f.check_box :privacy_agreed, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            </div>
            <div class="ml-3 text-sm">
              <%= f.label :privacy_agreed, class: "font-medium text-gray-700" do %>
                <%= Rails.env.production? ? raw('<span class="text-red-500">*</span> ') : '' %>개인정보처리방침에 동의합니다 <%= Rails.env.production? ? '(필수)' : '(선택)' %>
              <% end %>
            </div>
          </div>
          <% if resource.errors[:privacy_agreed].any? %>
            <% resource.errors[:privacy_agreed].each do |error_message| %>
              <p class="ml-8 text-sm text-red-600"><%= error_message %></p>
            <% end %>
          <% end %>

          <div class="flex items-start">
            <div class="flex items-center h-5">
              <input type="checkbox" name="marketingAgreed" id="marketingAgreed" value="1" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
            </div>
            <div class="ml-3 text-sm">
              <label for="marketingAgreed" class="font-medium text-gray-700">
                마케팅 정보 수신에 동의합니다 (선택)
              </label>
            </div>
          </div>
        </div>

        <div>
          <%= f.submit "회원가입",
              class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-800 cursor-pointer transition" %>
        </div>
      <% end %>

      <p class="mt-6 text-center text-sm text-gray-600">
        이미 계정이 있으신가요?
        <%= link_to "로그인", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
      </p>
    </div>

    <!-- Features -->
    <div class="grid grid-cols-3 gap-4 text-center mt-8">
      <div>
        <div class="text-3xl mb-2">📚</div>
        <div class="text-sm font-medium text-gray-900">PDF 자동 분석</div>
        <div class="text-xs text-gray-600 mt-1">문제집을 업로드하면 AI가 자동으로 분석</div>
      </div>
      <div>
        <div class="text-3xl mb-2">🎯</div>
        <div class="text-sm font-medium text-gray-900">지식 그래프</div>
        <div class="text-xs text-gray-600 mt-1">약점을 시각화하여 효율적인 학습</div>
      </div>
      <div>
        <div class="text-3xl mb-2">🚀</div>
        <div class="text-sm font-medium text-gray-900">맞춤형 학습</div>
        <div class="text-xs text-gray-600 mt-1">개인별 취약점 분석 및 추천</div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.querySelector('form[action*="signup"]');
  const networkError = document.getElementById('network-error');
  const retryButton = document.getElementById('retry-button');
  const submitButton = form.querySelector('input[type="submit"]');

  let formData = null;

  function hideNetworkError() {
    if (networkError) {
      networkError.classList.add('hidden');
    }
  }

  function showNetworkError() {
    if (networkError) {
      networkError.classList.remove('hidden');
      networkError.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
  }

  function submitFormWithFetch(e) {
    if (e) {
      e.preventDefault();
    }

    hideNetworkError();

    // Disable submit button
    if (submitButton) {
      submitButton.disabled = true;
      submitButton.value = '처리 중...';
    }

    // Store form data
    formData = new FormData(form);

    // Submit with fetch API
    fetch(form.action, {
      method: 'POST',
      body: formData,
      headers: {
        'Accept': 'text/html'
      },
      redirect: 'follow'
    })
    .then(response => {
      // Success - check if redirected
      if (response.ok || response.redirected) {
        // Navigate to the final URL (after redirects)
        window.location.href = response.url;
      } else {
        // Server error - show validation errors by replacing page content
        return response.text().then(html => {
          document.open();
          document.write(html);
          document.close();
        });
      }
    })
    .catch(error => {
      // Network error
      console.error('Network error:', error);
      showNetworkError();

      // Re-enable submit button
      if (submitButton) {
        submitButton.disabled = false;
        submitButton.value = '회원가입';
      }
    });
  }

  // Intercept form submission
  if (form) {
    form.addEventListener('submit', submitFormWithFetch);
  }

  // Retry button handler
  if (retryButton) {
    retryButton.addEventListener('click', function() {
      submitFormWithFetch();
    });
  }
});
</script>
