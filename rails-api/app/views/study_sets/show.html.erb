<div class="min-h-screen bg-gray-50">
  <%= render 'shared/navbar' %>

  <!-- Hero Section with Gradient -->
  <div class="bg-gradient-to-r from-blue-600 to-indigo-700 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center justify-between">
        <div>
          <div class="flex items-center space-x-3 mb-2">
            <%= link_to study_sets_path, class: "text-white/80 hover:text-white transition" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
            <% end %>
            <span class="text-white/60">문제집</span>
          </div>
          <h1 class="text-3xl font-bold mb-2"><%= @study_set.title %></h1>
          <p class="text-white/90"><%= @study_set.description || "시험 준비를 위한 학습 세트" %></p>

          <% if @study_set.exam_date.present? %>
            <div class="mt-4 inline-flex items-center px-4 py-2 bg-white/20 rounded-lg backdrop-blur">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span class="font-semibold">D-<%= (@study_set.exam_date - Date.today).to_i %></span>
              <span class="ml-2 text-sm">(<%= @study_set.exam_date.strftime("%Y년 %m월 %d일") %>)</span>
            </div>
          <% end %>
        </div>

        <div class="flex space-x-3">
          <%= link_to edit_study_set_path(@study_set), class: "p-2 bg-white/20 hover:bg-white/30 rounded-lg transition" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          <% end %>
          <%= button_to study_set_path(@study_set), method: :delete,
              data: { confirm: "정말 삭제하시겠습니까?" },
              class: "p-2 bg-red-500/20 hover:bg-red-500/30 rounded-lg transition" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600">총 문제</p>
            <p class="text-3xl font-bold text-gray-900 mt-1">
              <%= @study_set.questions.count %>
            </p>
          </div>
          <div class="p-3 bg-purple-100 rounded-lg">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600">학습 완료</p>
            <p class="text-3xl font-bold text-gray-900 mt-1">0</p>
          </div>
          <div class="p-3 bg-green-100 rounded-lg">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600">정답률</p>
            <p class="text-3xl font-bold text-gray-900 mt-1">-%</p>
          </div>
          <div class="p-3 bg-blue-100 rounded-lg">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
          </div>
        </div>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600">학습 시간</p>
            <p class="text-3xl font-bold text-gray-900 mt-1">0h</p>
          </div>
          <div class="p-3 bg-yellow-100 rounded-lg">
            <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Action Buttons -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <!-- Start Test Button -->
      <% if @study_set.questions.any? %>
        <%= link_to new_study_set_exam_session_path(@study_set),
            class: "group relative overflow-hidden bg-gradient-to-r from-green-500 to-green-600 text-white rounded-xl p-8 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all" do %>
          <div class="relative z-10">
            <svg class="w-12 h-12 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3 class="text-2xl font-bold mb-2">모의고사 시작</h3>
            <p class="text-green-100">실전과 같은 환경에서 테스트</p>
            <p class="text-green-200 text-sm mt-2"><%= @study_set.questions.count %>개 문제 준비됨</p>
          </div>
          <div class="absolute inset-0 bg-white opacity-0 group-hover:opacity-20 transition-opacity"></div>
        <% end %>
      <% else %>
        <div class="group relative overflow-hidden bg-gradient-to-r from-gray-400 to-gray-500 text-white rounded-xl p-8 shadow-lg">
          <div class="relative z-10">
            <svg class="w-12 h-12 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3 class="text-2xl font-bold mb-2">모의고사 시작</h3>
            <p class="text-gray-200">문제를 먼저 추가해주세요</p>
            <p class="text-yellow-300 text-sm mt-2">⚠️ PDF 파일을 처리하면 활성화됩니다</p>
          </div>
        </div>
      <% end %>

      <!-- Practice Mode -->
      <% if @study_set.questions.any? %>
        <%= link_to new_study_set_exam_session_path(@study_set, exam_type: 'practice'),
            class: "group relative overflow-hidden bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-xl p-8 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all" do %>
          <div class="relative z-10">
            <svg class="w-12 h-12 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            <h3 class="text-2xl font-bold mb-2">연습 모드</h3>
            <p class="text-blue-100">시간 제한 없이 차근차근 학습</p>
          </div>
          <div class="absolute inset-0 bg-white opacity-0 group-hover:opacity-20 transition-opacity"></div>
        <% end %>
      <% else %>
        <div class="group relative overflow-hidden bg-gradient-to-r from-gray-400 to-gray-500 text-white rounded-xl p-8 shadow-lg">
          <div class="relative z-10">
            <svg class="w-12 h-12 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            <h3 class="text-2xl font-bold mb-2">연습 모드</h3>
            <p class="text-gray-200">문제를 먼저 추가해주세요</p>
          </div>
        </div>
      <% end %>

      <!-- Review Wrong Answers -->
      <% if current_user.wrong_answers.where(study_set: @study_set).any? %>
        <%= link_to new_study_set_exam_session_path(@study_set, exam_type: ExamSession::EXAM_TYPE_WRONG_ANSWER),
            class: "group relative overflow-hidden bg-gradient-to-r from-red-500 to-red-600 text-white rounded-xl p-8 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all" do %>
          <div class="relative z-10">
            <svg class="w-12 h-12 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <h3 class="text-2xl font-bold mb-2">오답노트</h3>
            <p class="text-red-100">틀린 문제만 집중 복습</p>
            <p class="text-red-200 text-sm mt-2"><%= current_user.wrong_answers.where(study_set: @study_set).count %>개 오답</p>
          </div>
          <div class="absolute inset-0 bg-white opacity-0 group-hover:opacity-20 transition-opacity"></div>
        <% end %>
      <% else %>
        <div class="group relative overflow-hidden bg-gradient-to-r from-gray-400 to-gray-500 text-white rounded-xl p-8 shadow-lg">
          <div class="relative z-10">
            <svg class="w-12 h-12 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <h3 class="text-2xl font-bold mb-2">오답노트</h3>
            <p class="text-gray-200">아직 틀린 문제가 없습니다</p>
            <p class="text-yellow-300 text-sm mt-2">💡 시험을 보면 오답이 자동으로 저장됩니다</p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- PDF Upload Section -->
    <div id="upload-section" class="<%= @study_set.study_materials.any? ? 'hidden' : '' %> bg-white rounded-xl shadow-lg p-8 mb-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">PDF 업로드</h2>
      <%= form_with(model: [@study_set, @study_set.study_materials.build],
                    local: true,
                    html: { multipart: true, class: "space-y-6" }) do |form| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :name, "파일 이름", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :name,
                                placeholder: "예: 2024년 기출문제",
                                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                                required: true %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">PDF 파일</label>
            <div class="flex items-center space-x-4">
              <%= form.file_field :pdf_file,
                                  accept: ".pdf",
                                  required: true,
                                  class: "flex-1 px-4 py-3 border border-gray-300 rounded-lg file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100",
                                  onchange: "updateFileName(this)" %>
            </div>
            <p class="text-xs text-gray-500 mt-1">최대 50MB PDF 파일</p>
          </div>
        </div>

        <div class="flex justify-end space-x-4">
          <button type="button"
                  onclick="document.getElementById('upload-section').classList.add('hidden')"
                  class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 font-medium">
            취소
          </button>
          <%= form.submit "업로드 및 문제 추출",
                          class: "px-8 py-2 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium rounded-lg hover:from-blue-700 hover:to-blue-800 shadow-md cursor-pointer" %>
        </div>
      <% end %>
    </div>

    <!-- Study Materials List -->
    <% if @study_set.study_materials.any? %>
      <div class="bg-white rounded-xl shadow-sm p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-semibold text-gray-900">업로드된 학습 자료</h2>
          <button onclick="document.getElementById('upload-section').classList.toggle('hidden')"
                  class="text-blue-600 hover:text-blue-700 font-medium">
            + 추가 업로드
          </button>
        </div>
        <div class="space-y-3">
          <% @study_set.study_materials.each do |material| %>
            <% if material.persisted? %>
              <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
                <div class="flex items-center space-x-4">
                  <div class="p-2 bg-red-100 rounded-lg">
                    <svg class="w-6 h-6 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium text-gray-900"><%= material.name || "Untitled" %></p>
                    <p class="text-sm text-gray-500">
                      <% if material.status == 'completed' %>
                        <span class="text-green-600">✓ <%= material.questions.count %> 문제 추출됨</span>
                      <% elsif material.status == 'processing' %>
                        <span class="text-blue-600 animate-pulse">처리 중...</span>
                      <% elsif material.status == 'failed' %>
                        <span class="text-red-600">처리 실패</span>
                      <% else %>
                        <span class="text-gray-600">대기 중</span>
                      <% end %>
                    </p>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <% if material.status == 'pending' %>
                    <%= button_to "처리 시작",
                                  process_study_set_study_material_path(@study_set, material),
                                  method: :post,
                                  class: "px-4 py-1 bg-green-600 text-white rounded-lg hover:bg-green-700 text-sm font-medium" %>
                  <% end %>
                  <%= button_to "삭제",
                                study_set_study_material_path(@study_set, material),
                                method: :delete,
                                data: { confirm: "정말 삭제하시겠습니까?" },
                                class: "px-4 py-1 bg-red-600 text-white rounded-lg hover:bg-red-700 text-sm font-medium" %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Questions Preview (if any) -->
    <% if @study_set.questions.any? %>
      <div class="mt-8 bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">문제 미리보기</h2>
        <div class="space-y-4">
          <% @study_set.questions.limit(3).each_with_index do |question, index| %>
            <div class="p-4 bg-gray-50 rounded-lg">
              <p class="font-medium text-gray-900 mb-2">
                <%= index + 1 %>. <%= question.content %>
              </p>
              <% if question.options.present? %>
                <div class="space-y-1 ml-4">
                  <% question.options.each do |key, value| %>
                    <p class="text-sm text-gray-600"><%= key %> <%= value %></p>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
          <% if @study_set.questions.count > 3 %>
            <p class="text-center text-gray-500">
              ... 그리고 <%= @study_set.questions.count - 3 %>개의 문제가 더 있습니다
            </p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  function updateFileName(input) {
    if (input.files && input.files[0]) {
      const fileName = input.files[0].name;
      const nameField = document.querySelector('input[name="study_material[name]"]');
      if (nameField && !nameField.value) {
        nameField.value = fileName.replace('.pdf', '');
      }
    }
  }
</script>