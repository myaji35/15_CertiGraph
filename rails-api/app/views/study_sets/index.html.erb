<div class="min-h-screen bg-white">
  <%= render 'shared/navbar' %>

  <div class="max-w-6xl mx-auto px-8 py-12">
    <!-- Notion-style Header with Breadcrumbs -->
    <div class="mb-2">
      <nav class="flex items-center space-x-1 text-sm text-gray-500">
        <%= link_to "홈", root_path, class: "hover:text-gray-700 transition-colors" %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="text-gray-900 font-medium">학습 세트</span>
      </nav>
    </div>

    <!-- Header -->
    <div class="flex justify-between items-start mb-8">
      <div>
        <h1 class="text-4xl font-bold text-gray-900 tracking-tight">학습 세트</h1>
        <p class="text-gray-500 mt-2 text-lg">자격증 시험 준비를 위한 AI 학습 공간</p>
      </div>
      <%= link_to new_study_set_path, class: "group bg-black text-white px-4 py-2 rounded-md hover:bg-gray-800 transition-all flex items-center gap-2 text-sm font-medium" do %>
        <svg class="w-4 h-4 group-hover:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        새로 만들기
      <% end %>
    </div>

    <!-- Notion-style Tabs/Filters -->
    <div class="border-b border-gray-200 mb-8">
      <nav class="flex space-x-6">
        <button class="pb-3 border-b-2 border-gray-900 text-gray-900 font-medium text-sm">모든 세트</button>
        <button class="pb-3 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm transition-colors">최근 학습</button>
        <button class="pb-3 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium text-sm transition-colors">즐겨찾기</button>
      </nav>
    </div>

    <!-- Study Sets Grid - Notion Style -->
    <% if @study_sets.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @study_sets.each do |study_set| %>
          <%= link_to study_set_path(study_set), class: "group block" do %>
            <div class="bg-white border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition-all duration-200 cursor-pointer overflow-hidden">
              <!-- Card Header with Icon -->
              <div class="p-5 pb-3">
                <div class="flex items-start justify-between mb-3">
                  <div class="w-10 h-10 bg-gradient-to-br from-blue-50 to-indigo-100 rounded-lg flex items-center justify-center">
                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                  </div>
                  <!-- Three dots menu (Notion style) -->
                  <div class="opacity-0 group-hover:opacity-100 transition-opacity">
                    <button class="p-1 hover:bg-gray-100 rounded">
                      <svg class="w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/>
                      </svg>
                    </button>
                  </div>
                </div>

                <!-- Title -->
                <h3 class="text-base font-semibold text-gray-900 mb-1 group-hover:text-blue-600 transition-colors">
                  <%= study_set.title %>
                </h3>

                <!-- Description -->
                <p class="text-sm text-gray-500 line-clamp-2 leading-relaxed">
                  <%= study_set.description || "AI 기반 자격증 학습 세트" %>
                </p>
              </div>

              <!-- Card Footer - Stats -->
              <div class="px-5 py-3 bg-gray-50 border-t border-gray-100">
                <div class="flex items-center justify-between text-xs">
                  <div class="flex items-center gap-3 text-gray-500">
                    <span class="flex items-center gap-1">
                      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                      </svg>
                      <%= study_set.study_materials.count %>
                    </span>
                    <% if study_set.certification.present? %>
                      <span class="px-2 py-0.5 bg-blue-100 text-blue-700 rounded text-xs font-medium">
                        <%= study_set.certification_display_name %>
                      </span>
                    <% end %>
                  </div>
                  <span class="text-gray-400">
                    <%= study_set.created_at.strftime("%m/%d") %>
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="bg-white rounded-lg shadow-sm p-12 text-center">
        <svg class="w-24 h-24 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">아직 학습 세트가 없습니다</h3>
        <p class="text-gray-600 mb-6">첫 학습 세트를 만들고 PDF를 업로드해보세요</p>
        <%= link_to new_study_set_path, class: "inline-flex items-center gap-2 bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          첫 학습 세트 만들기
        <% end %>
      </div>
    <% end %>
  </div>
</div>