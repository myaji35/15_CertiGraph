<div class="min-h-screen bg-gradient-to-br from-gray-50 to-blue-50">
  <%= render 'shared/navbar' %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header with Breadcrumbs -->
    <div class="mb-3">
      <nav class="flex items-center space-x-2 text-sm text-gray-500">
        <%= link_to "홈", root_path, class: "hover:text-primary-blue transition-colors" %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="text-gray-900 font-semibold">학습 세트</span>
      </nav>
    </div>

    <!-- Header -->
    <div class="flex justify-between items-start mb-10">
      <div>
        <h1 class="text-4xl font-bold text-gray-900 mb-2">학습 세트</h1>
        <p class="text-gray-600 text-lg">자격증 시험 준비를 위한 AI 학습 공간</p>
      </div>
      <%= link_to new_study_set_path, class: "btn btn-primary flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        새로 만들기
      <% end %>
    </div>

    <!-- Tabs/Filters -->
    <div class="border-b border-gray-200 mb-10">
      <nav class="flex space-x-8">
        <button class="pb-4 border-b-2 border-primary-blue text-primary-blue font-semibold">모든 세트</button>
        <button class="pb-4 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium transition-colors">최근 학습</button>
        <button class="pb-4 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-medium transition-colors">즐겨찾기</button>
      </nav>
    </div>

    <!-- Study Sets Grid -->
    <% if @study_sets.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @study_sets.each do |study_set| %>
          <%= link_to study_set_path(study_set), class: "group block" do %>
            <div class="card card-hover">
              <!-- Card Header with Icon -->
              <div class="flex items-start justify-between mb-4">
                <div class="feature-icon feature-icon-blue">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                  </svg>
                </div>
              </div>

              <!-- Title -->
              <h3 class="card-title group-hover:text-primary-blue transition-colors mb-2">
                <%= study_set.title %>
              </h3>

              <!-- Description -->
              <p class="text-sm text-gray-600 line-clamp-2 leading-relaxed mb-4">
                <%= study_set.description || "AI 기반 자격증 학습 세트" %>
              </p>

              <!-- Card Footer - Stats -->
              <div class="pt-4 border-t border-gray-200">
                <div class="flex items-center justify-between text-sm">
                  <div class="flex items-center gap-3 text-gray-500">
                    <span class="flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                      </svg>
                      <%= study_set.study_materials.count %>
                    </span>
                    <% if study_set.certification.present? %>
                      <span class="badge badge-primary">
                        <%= study_set.certification_display_name %>
                      </span>
                    <% end %>
                  </div>
                  <span class="text-gray-500 text-xs">
                    <%= study_set.created_at.strftime("%m/%d") %>
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="card text-center p-16">
        <svg class="w-24 h-24 text-gray-400 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
        <h3 class="text-2xl font-bold text-gray-900 mb-3">아직 학습 세트가 없습니다</h3>
        <p class="text-gray-600 mb-8 text-lg">첫 학습 세트를 만들고 PDF를 업로드해보세요</p>
        <%= link_to new_study_set_path, class: "btn btn-primary btn-lg inline-flex items-center gap-2" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          첫 학습 세트 만들기
        <% end %>
      </div>
    <% end %>
  </div>
</div>