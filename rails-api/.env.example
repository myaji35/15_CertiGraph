# Epic 2: PDF Upload & Storage Configuration

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=certigraph-production

# Optional: CloudFront for faster downloads
# CLOUDFRONT_URL=https://your-distribution.cloudfront.net

# Application Host (for Active Storage URLs)
APP_HOST=http://localhost:3000

# File Upload Limits
MAX_FILE_SIZE=524288000  # 500MB in bytes
MAX_CHUNK_SIZE=5242880   # 5MB in bytes

# Storage Cleanup Configuration
UNUSED_FILE_RETENTION_DAYS=30
FAILED_UPLOAD_RETENTION_DAYS=7
TEMP_FILE_RETENTION_DAYS=1

# ClamAV Configuration (optional malware scanning)
# CLAMAV_ENABLED=true
# CLAMAV_HOST=localhost
# CLAMAV_PORT=3310

# Background Job Configuration
SOLID_QUEUE_PROCESSES=4
SOLID_QUEUE_THREADS=5